{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col items-center">


        <h2>Détail d'un souhait !</h2>
        <div class="flex justify-end">
           <a class="button" href="{{ path('wish_update', {'id': wish.id }) }}">Modifier</a>
        </div>
        <card class="p-4 border border-amber-300 rounded-2xl m-3">
            <h3>{{ wish.title }}</h3>
            <p class="mt-4 mb-4"><i>Créé par {{ wish.author }} le {{ wish.dateCreated | date("Y-m-d") }}</i></p>
            <div>{{ wish.description | nl2br }}</div>
        </card>
    </div>
{% endblock %}

